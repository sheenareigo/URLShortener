@model Shortly.Client.Data.ViewModels.PostUrlVM
@{
    ViewData["Title"] = "Welcome";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{

    if (TempData["SuccessMessage"] != null)
    {
    
       <div class="container">
       
           <div class="alert alert-success alert-dismissible fade show" role="alert">

                <strong>  @Html.Raw(TempData["SuccessMessage"]) </strong>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
           
           </div>
        </div>

    }

    if (TempData["NotRegistered"] != null)
    {

        <div class="container">

            <div class="alert alert-info alert-dismissible fade show" role="alert">

                <strong>Success! </strong>@TempData["NotRegistered"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
        </div>

    }
    if (TempData["Email"] != null)
    {
        <div class="container">

            <div class="alert alert-success alert-dismissible fade show" role="alert">

                <strong>Success! </strong>@TempData["Email"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
        </div>
        
    
    }

    if (TempData["EmailVerified"] != null)
    {
        <div class="container">

            <div class="alert alert-success alert-dismissible fade show" role="alert">

                <strong> @TempData["EmailVerified"] </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
        </div>


    }
}

<section>
    <div class="landing py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4">
                    <img src="~/img/home_img.png" class="img-fluid" alt="" />
                </div>
                <div class="col-lg-8">
                    <h1 class="display-4">More than just sizing links</h1>
                    <p class="lead">
                        Track clicks in real-time. Get detailed insights on the performance of your links
                    </p>
                    <p class="additional-text">
                        Transform lengthy URLs into short, shareable links with just one click. Simplify your links for social media, emails, and more.
                    </p>
                    <p class="additional-text">
                        Strengthen your brand by creating custom, branded short URLs. Enhance trust and recognition with every link you share.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features" id="features">
    <div class="container">
        <div class="url-shorten-feature">
            <form class="url-shorten-form" id="url-shorten-form" asp-controller="Home" asp-action="ShortenURL" method="post">
                <div>
                    <input asp-for="Url" type="text" class="url-input" placeholder="Shorten a link here..." autocomplete="off" />
                    <span asp-validation-for="Url" style="color:white;"></span>
                </div>
                <button type="submit" class="btn btn-lg">Shorten It!</button>
            </form>
            <div class="url-shorten-results"></div>
        </div>
    </div>
</section>
